{
  "namespace": "edu_add_server",

  "add_button@common_buttons.light_text_button": {
    "$pressed_button_name": "button.add_server",
    "$button_text": "edu.servers_screen.confirm_add_server",
    "bindings": [
      {
        "binding_name": "#add_button_enabled",
        "binding_name_override": "#enabled"
      }
    ]
  },

  "game_tip_item_panel": {
    "type": "panel",
    "size": [ "100%", "100%cm + 4px" ],
    "controls": [
      {
        "offset_wrap": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [ "100%", "100%cm" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "controls": [
            {
              "info_bulb": {
                "type": "image",
                "layer": 13,
                "size": [ "100%y", "100%sm" ],
                "texture": "textures/ui/infobulb"
              }
            },
            {
              "padding_1": {
                "type": "panel",
                "size": [ 2, 0 ]
              }
            },
            {
              "label@game_tip.game_tip_label": {
                "size": [ "fill", 10 ]
              }
            }
          ]
        }
      },
      {
        "focus_border@common.non_interact_focus_border_button": {
          "size": [ "100%", "100%sm" ],
          "consume_hover_events": false,
          "tts_inherit_siblings": true,
          // Expose a way for the parent to announce the tooltip in addition to the text from the label above
          "$tts_tooltip_header|default": " ",
          "tts_control_header": "$tts_tooltip_header",
          "$focus_border_visible_binding|default": "#tts_enabled",
          "bindings": [
            {
              "binding_name": "$focus_border_visible_binding",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "server_id_label_content@edu_add_server.game_tip_item_panel": {
    "$label_text_binding_type": "none",
    "$label_text": "edu.servers_screen.server_id_label",
    "$animation": []
  },

  "hide_height_from_parent": {
    "type": "panel",
    "size": [ "100%", 0 ],
    "controls": [
      {
        "content@$hidden_content": {
          "anchor_from": "top_left",
          "anchor_to": "bottom_left"
        }
      }
    ]
  },

  "popup_notification_panel": {
    "type": "input_panel",
    "size": [ "100%", "100%cm" ],

    "$tooltip_popup_image": "textures/ui/infobulb",
    "$tooltip_button_content_size|default": [ "100%", "100%" ],
    "$tooltip_button_binding_type|default": "global",
    "$tooltip_button_collection_name|default": "",

    "button_mappings": [
      {
        "to_button_id": "$hovered_button_id",
        "mapping_type": "pressed"
      }
    ],
    "controls": [
      // Popup that appears when hovering. Don't want this to be considered for cm size calculation
      {
        "hide_wrapper@edu_add_server.hide_height_from_parent": {
          "$hidden_content": "common.dynamic_tooltip_popup_with_image_and_text",
          "$tool_tip_text_max_size": [ 200, "default" ],
          "$tooltip_chevron_anchor": "bottom_left",
          "$tooltip_popup_chevron_offset": [ "30%x", "100%y - 3px" ],
          // Offset left towards the bulb icon and up so the chevron doesn't overlap with the label
          "$tooltip_panel_offset": [ -10, -15 ]
        }
      },
      // Static label for the hoverable area
      { "tooltip_panel_content@$tooltip_panel_content": {} }
    ]
  },

  "server_id_tooltip_panel@edu_add_server.popup_notification_panel": {
    "$hovered_button_id": "server_id_tooltip.is_hovered",
    "$tooltip_popup_visible_binding": "#is_tooltip_hover_panel_visible",
    "$tooltip_text_binding_name": "edu.servers_screen.server_id_tooltip_text",
    "$tts_tooltip_header": "edu.servers_screen.server_id_tooltip_tts",
    "$tooltip_text_binding_type": "none",
    "$tooltip_panel_content": "edu_add_server.server_id_label_content"
  },

  "edit_label_and_box": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "$label_focus_id|default": "",
    "$edit_focus_id|default": "",
    "$box_focus_override_right|default": "",
    "$box_focus_override_right_binding_type|default": "none",
    "$box_focus_override_left|default": "",

    "controls": [
      {
        "tooltip_panel@$tooltip_panel": {
          "$focus_id": "$label_focus_id"
        }
      },
      {
        "edit_box@common.text_edit_box": {
          "layer": 2,
          "size": [ "100%", 20 ],
          "$text_box_name": "$text_box_name",
          "$text_edit_box_content_binding_name": "$content_binding_name",
          "max_length": "$max_length",
          "$place_holder_text": "$placeholder_label",
          "$text_edit_box_binding_condition": "visible",

          "$focus_id": "$edit_focus_id",
          "$focus_override_right": "$box_focus_override_right",
          "$focus_override_left": "$box_focus_override_left",

          "bindings": [
            {
              "binding_name": "$box_focus_override_right",
              "binding_name_override": "#focus_change_right",
              "binding_type": "$box_focus_override_right_binding_type"
            }
          ]
        }
      }
    ]
  },

  "server_id_edit_label_and_box@edu_add_server.edit_label_and_box": {
    "$placeholder_label": "edu.servers_screen.add_info_placeholder",
    "$text_box_name": "#server_id_text_box",
    "$max_length": 12,
    "$content_binding_name": "#server_id_text_box_content",
    "$tooltip_panel": "server_id_tooltip_panel"
  },

  "horizontal_padding_4px@common.empty_panel": {
    "size": [ "100%", 4 ]
  },

  "header_label_text@common.button_text": {
    "size": [ "100%", "default" ],
    "text": "edu.servers_screen.server_id_info",
    "font_type": "smooth",
    "font_scale_factor": 1.1
  },

  "header_label@common.tts_label_focus_wrapper": {
    "$tts_label_panel": "edu_add_server.header_label_text"
  },

  "add_server_content": {
    "type": "panel",
    "size": [ 300, "100%c" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "shrink_wrap": {
          "type": "stack_panel",
          "orientation": "vertical",
          "size": [ "100% - 8px", "100%c" ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",

          "controls": [
            { "header_pad@edu_add_server.horizontal_padding_4px": {} },
            {
              "header@edu_add_server.header_label": {
                "$focus_id": "header"
              }
            },
            { "body_pad@edu_add_server.horizontal_padding_4px": {} },
            {
              "server_id_edit_label_and_box@edu_add_server.server_id_edit_label_and_box": {
                "$label_focus_id": "server_id_label",
                "$edit_focus_id": "server_id_entry",
                "$box_focus_override_left": "add"
              }
            },
            {
              "pad@common.empty_panel": {
                "size": [ "100%", 2 ]
              }
            },
            { "padding_center@course.horizontal_padding_4px": {} },
            {
              "add@edu_add_server.add_button": {
                "size": [ "100%", 18 ],

                "$focus_id": "add",
                "$focus_override_right": "server_id_entry"
              }
            },
            { "padding_bottom@course.horizontal_padding_4px": {} }
          ]
        }
      }
    ]
  }
}
